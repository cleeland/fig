#!/usr/bin/env ruby

$LOAD_PATH << File.expand_path(File.join(File.dirname(__FILE__), %w< .. lib > ))

require 'rubygems'

require 'fig'

include Fig

def run
  begin
    return_code = run_fig
    return return_code
  rescue URLAccessError => e
    $stderr.puts "Access to #{e.url} not allowed."
    return 1
  rescue UserInputError => e
    $stderr.puts e.to_s
    return 1
  end
end

return_code = run
exit return_code
